# Define que este é o arquivo principal de configuração do EditorConfig
root = true

[*]
indent_style = space         # Usa espaços em vez de tabs para indentação
indent_size = 2              # Define que a indentação terá 2 espaços
end_of_line = lf             # Usa "LF" (line feed) como quebra de linha (padrão em sistemas Unix/Linux/macOS e no Git)
charset = utf-8              # Define a codificação como UTF-8
trim_trailing_whitespace = false  # Não remove espaços em branco no final das linhas
insert_final_newline = false     # Não adiciona uma linha em branco no final dos arquivos
